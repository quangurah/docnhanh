# AWS Deployment Environment Variables

# Application
NODE_ENV=production
PORT=3001
HOST=0.0.0.0

# API Configuration
REACT_APP_API_URL=https://your-api-domain.com
REACT_APP_BASE_URL=https://your-domain.com

# VnExpress Scraping
VNEXPRESS_TIMEOUT=120000
VNEXPRESS_MAX_RETRIES=3
VNEXPRESS_BATCH_SIZE=5

# Database (if needed)
DATABASE_URL=postgresql://username:password@localhost:5432/docnhanh
REDIS_URL=redis://localhost:6379

# External APIs
OPENAI_API_KEY=sk-your-openai-key
GEMINI_API_KEY=your-gemini-key
APIFY_TOKEN=your-apify-token

# Security
JWT_SECRET=your-super-secret-jwt-key
SESSION_SECRET=your-session-secret

# Monitoring
SENTRY_DSN=your-sentry-dsn
LOG_LEVEL=info

# AWS Specific
AWS_REGION=ap-southeast-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
